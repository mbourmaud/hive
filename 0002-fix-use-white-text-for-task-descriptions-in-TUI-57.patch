 ) {
-    let (task_icon, task_color) = if task.status == "completed" {
-        ("●", Color::Green)
+    let (task_icon, icon_color, text_color) = if task.status == "completed" {
+        ("●", Color::Green, Color::DarkGray)
     } else if task.status == "in_progress" {
-        ("◐", Color::Yellow)
