# Hive Configuration
# Documentation: https://github.com/mbourmaud/hive/blob/main/docs/configuration.md

# Workspace settings
workspace:
  name: my-project              # Project name (used for directory names)
  git_url: ""                   # Optional: auto-clone repo on first start
  # git_url: https://github.com/user/repo.git

# Redis task queue
redis:
  port: 6380                    # Redis port (avoid conflicts with default 6379)

# Agent configuration
agents:
  # Queen (orchestrator)
  queen:
    model: sonnet               # Claude model: sonnet, opus, haiku
    dockerfile: docker/Dockerfile.node  # Docker image to use
    env:                        # Optional: custom environment variables
      # CUSTOM_VAR: value

  # Workers (task executors)
  workers:
    count: 2                    # Number of workers (1-10)
    model: sonnet               # Claude model for workers
    dockerfile: docker/Dockerfile.node  # Docker image for workers
    env:                        # Optional: custom environment variables
      # CUSTOM_VAR: value

# Available Dockerfiles:
# - docker/Dockerfile.minimal  (~500MB): Just Claude + git
# - docker/Dockerfile.node     (~1.5GB): Node.js 22 + pnpm + Playwright (default)
# - docker/Dockerfile.go       (~1GB):   Go 1.22 + development tools
# - docker/Dockerfile.python   (~800MB): Python 3.12 + data science libs
# - docker/Dockerfile.rust     (~2GB):   Rust 1.75 + cargo tools

# Available Claude models:
# - sonnet: Fast and capable (default, recommended)
# - opus:   Most capable, slower
# - haiku:  Fastest, less capable

# Host MCPs - Browser, iOS & Clipboard (run on macOS host)
# These MCP servers run on your host machine and provide
# browser/iOS automation and clipboard access to Claude agents in Docker containers
#
# host_mcps:
#   # Playwright browser automation
#   playwright:
#     enabled: true           # Enable Playwright MCP
#     port: 8931              # SSE port (default: 8931)
#     headless: false         # false = visible browser you can watch
#     browser: chromium       # chromium, firefox, or webkit
#
#   # iOS Simulator automation (macOS only)
#   ios:
#     enabled: true           # Enable iOS MCP
#     port: 8932              # SSE port (default: 8932)
#
#   # Clipboard access (text and images)
#   clipboard:
#     enabled: true           # Enable Clipboard MCP
#     port: 8933              # SSE port (default: 8933)
#   # Note: For image clipboard support, install pngpaste: brew install pngpaste
