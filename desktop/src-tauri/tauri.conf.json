{
  "$schema": "https://raw.githubusercontent.com/nickelpack/tauri-v2-schema/main/schema.json",
  "productName": "Hive",
  "version": "0.1.0",
  "identifier": "com.hive.monitor",
  "build": {
    "frontendDist": "../../web/dist",
    "beforeBuildCommand": "cd ../web && npm run build",
    "beforeDevCommand": "cd ../web && npm run dev",
    "devUrl": "http://localhost:5173"
  },
  "app": {
    "windows": [
      {
        "title": "Hive",
        "width": 1200,
        "height": 800,
        "minWidth": 800,
        "minHeight": 600,
        "resizable": true,
        "center": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "category": "DeveloperTool",
    "targets": ["dmg", "nsis", "deb", "appimage"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "11.0"
    }
  }
}
